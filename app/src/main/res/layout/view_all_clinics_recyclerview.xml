<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/clinic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:padding="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        card_view:cardCornerRadius="4dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/ic_location_on_black_24dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clinic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Sai Raksha Clinic"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/clinic_address_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="opp govt hospital, doctors colony Nalgonda"/>

            <TextView
                android:id="@+id/clinic_address_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mumbai"/>



        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/ic_access_time_black_24dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clinic_timing_monday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/clinic_timing_tuesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"

                />



            <TextView
                android:id="@+id/clinic_timing_wednesday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/clinic_timing_thrusday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/clinic_timing_friday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/clinic_timing_saturday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/clinic_timing_sunday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mon - Sun(9:30 - 21:30)"
                android:textSize="16sp"
                android:visibility="gone"
                />





        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/ic_attach_money_black_24dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clinic_consultation_fees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="RS 600 Consultation fees"
                android:textSize="16sp"
                />





        </LinearLayout>




    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:visibility="gone"
                    android:id="@+id/call_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_margin="4dp"
                    android:layout_weight="1"


                    android:backgroundTint="#F44336"
                    android:text="call"
                    android:textColor="#FFFFFF" />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/book_now"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"


                    android:layout_margin="4dp"

                    android:layout_weight="1"
                    android:backgroundTint="#F44336"
                    android:text="view details"

                    android:textColor="#FFFFFF" />


            </LinearLayout>



        </LinearLayout>



    </LinearLayout>



</LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

