<?xml version="1.0" encoding="utf-8"?>



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/medicine"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical"
                    android:paddingLeft="8dp">

                    <TextView
                        android:id="@+id/medicine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Crosin 650 Mg tablet"/>

                    <TextView
                        android:id="@+id/medicine_manufacturer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        tools:text="Glaxosmithkline pharmaceuticals Ltd."/>

                    <TextView
                        android:id="@+id/medicine_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Quantity : 2"/>

                    <TextView
                        android:id="@+id/medicine_discount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Discount: 2"/>

                    <TextView
                        android:id="@+id/medicine_gst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="GST: 2"/>



                    <TextView
                        android:id="@+id/medicine_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RS 22"/>





                </LinearLayout>



            </LinearLayout>




        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
